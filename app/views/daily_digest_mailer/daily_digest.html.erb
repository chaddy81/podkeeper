<p style="margin-bottom: 10px;">To view all your Pods: <%= link_to 'Go to PodKeeper', root_url %></p>

<% @pod_memberships.each do |pm| %>
  <h2>
    <span style="display: inline-block;font-size: 13px;color:#8eae43;position:relative;line-height:16px;margin-bottom:0;<%= pm.pod.name.chars.length > 15 ? 'width: 200px;' : 'width: 120px;' %>">
      <%= pm.pod.name %>
    </span>
    <% if !pm.pod_admin? && !new_items(pm) %>
      <span style="color: #333;display: inline-block;font-size: 11px;font-weight: normal;line-height: 16px;margin-bottom:0;">Nothing New</span>
    <% end %>

    <% if pm.pod_admin? && (PodMembership.joined_yesterday(pm.pod, pm.user).empty? && Invite.declined_yesterday(pm.pod).empty? && PodMembership.left_yesterday(pm.pod).empty?) %>
      <span style="color: #333;display: inline-block;font-size: 11px;font-weight: normal;line-height: 16px;margin-bottom:0;">Nothing New</span>
    <% end %>
  </h2>
  <% if pm.pod_admin? || new_items(pm) %>

    <% if pm.access_level_id == 3 %>
      <% if PodMembership.joined_yesterday(pm.pod, pm.user).any? || Invite.declined_yesterday(pm.pod).any? || PodMembership.left_yesterday(pm.pod).any? %>
        <%= render 'pod_admin', pm: pm %>
      <% end %>
    <% end %>

    <% if pm.pod.events.confirmed.updated_yesterday.any? ||
          pm.pod.events.confirmed.where(start_date: Date.today).any? ||
          pm.pod.notes.updated_yesterday.any? ||
          pm.pod.uploaded_files.updated_yesterday.any? %>
      <%= render 'events', pm: pm %>
      <%= render 'discussions', pm: pm %>
      <%= render 'files', pm: pm %>
    <% end %>

  <% end %>
<% end %>
<p>To view all your Pods or create a new Pod:  <%= link_to "Go to PodKeeper", root_url %></p>
