<p style="line-height: 15px;margin: 0;font-weight: bold;">Discussions</p>
<% unless pm.pod.notes.updated_yesterday.empty? %>
  <div class="discussions">
    <% pm.pod.notes.updated_yesterday.each do |note| %>
      <div style="margin-bottom: 10px;width: 60%;display: inline-block;">
        <span style="font-weight: bold;"><%= link_to note.topic, notes_url(pod_id: note.pod.id) %></span><br />
        <span style="font-weight: normal;"><%= truncate(note.body, length: 100) %></span><br />
        <%= link_to 'View Comments', notes_url(pod_id: note.pod.id) %>
      </div>
      <div style="width: 35%;display:inline-block;vertical-align:top;">
        <%= note.user.full_name %>, <%= note.created_at.strftime("%a,%b %d, %I:%M %p") %>
      </div>
    <% end %>
  </div>
<% else %>
  No new discussions
<% end %>
<hr style="display:block;height:1px;border:0;border-top: 1px solid #ccc;margin:1em 0;padding: 0;" />
