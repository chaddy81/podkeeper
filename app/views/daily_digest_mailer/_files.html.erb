<p style="line-height: 15px;margin: 0;font-weight: bold;">Files</p>
<% unless pm.pod.uploaded_files.updated_yesterday.empty? %>
  <div class="files">
    <% pm.pod.uploaded_files.updated_yesterday.each do |file| %>
      <div style="display:inline-block; width: 50%"><%= link_to file.description, uploaded_files_url(pod_id: pm.pod.id) %></div>
      <div style="display:inline-block; width: 45%"><%= file.pod_membership.user.full_name %>, <%= file.created_at.strftime("%a, %b %d, %I:%M %p") %></div>
    <% end %>
  </div>
<% else %>
  No new files
<% end %>
<hr style="display:block;height:1px;border:0;border-top: 1px solid #ccc;margin:1em 0;padding: 0;" />
