$('.event-details .event-rsvp').removeClass()
  .addClass('event-rsvp text-center event-rsvp--<%= @rsvp.rsvp_option.name %>')
  .text('<%= escape_javascript @rsvp.rsvp_option.display_name.html_safe %>');

$('.event-rsvp-container').html('<%= escape_javascript render "events/event_rsvp", event: @rsvp.event %>');
$('.event-attending-container').html('<%= escape_javascript render "events/event_attending", event: @rsvp.event %>');

$("[data-event-id=<%= @rsvp.event.id %>] .event-rsvp svg use").attr('xlink:href', '#icon-podkeeper-<%= @rsvp.rsvp_option.name %>');
$('.error-messages').html("<%= escape_javascript render 'flash_messages' %>");
$('.spinner').spinner({ min: 0, icons: { down: "icon-arrow-down", up: "icon-arrow-up" } });