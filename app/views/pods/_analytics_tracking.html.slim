- if params[:login] == 'success'
  javascript:
    $(function() {
      ga('send', 'event', 'user', 'login', 'success');
    });

- if params[:created] == 'success'
  javascript:
    $(function() {
      if(#{current_user.has_seen_get_pod_going == false}) {
        getPodGoing(#{current_user.id});
      }

      ga('send', 'event', 'pod', 'create', "#{current_pod.name}");
    });

- if session[:register] == 'success'
  = javascript_include_tag "https://www.advconversion.com/convtrack/conversion/track.do?type=html&id=68003"
  javascript:
    $(function() {
      if(#{current_user.has_seen_get_pod_going == false}) {
        getPodGoing(#{current_user.id});
      }

      ga('send', 'event', 'register create pod', 'register', 'success');
    });

- if session[:signup] == 'success'
  javascript:
    $(function() {
      ga('send', 'event', 'register join pod', 'register', 'success');
    });

